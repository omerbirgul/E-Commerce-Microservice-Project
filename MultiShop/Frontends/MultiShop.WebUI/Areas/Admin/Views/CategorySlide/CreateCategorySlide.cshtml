@model CreateCategorySlideDto
@{
    ViewData["Title"] = "CreateCategorySlide";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">
                        <label>Category Title:</label>
                        <input type="text" class="form-control" asp-for="CategoryTitle" />
                        <br />
                        <label>Category Image:</label>
                        <input type="text" class="form-control" asp-for="CategoryImageUrl" />
                        <button class="btn btn-primary">Add Category Slide</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>