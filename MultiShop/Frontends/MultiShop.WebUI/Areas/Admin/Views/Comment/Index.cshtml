@model List<ResultCommentDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    var count = 0;
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Comment:</th>
                                <th>User Fullname:</th>
                                <th>Product Commented On:</th>
                                <th>Delete</th>
                                <th>Update</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.CommentDetail</td>
                                    <td>@item.FullName</td>
                                    <td>@item.ProductId</td>
                                    <td><a href="/Admin/Comment/DeleteComment/@item.UserCommentId" class="btn btn-danger"> Delete</a></td>
                                    <td><a href="/Admin/Comment/UpdateComment/@item.UserCommentId" class="btn btn-success"> Update</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>