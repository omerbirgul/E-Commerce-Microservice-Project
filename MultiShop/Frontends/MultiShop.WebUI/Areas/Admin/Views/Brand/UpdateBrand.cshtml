@model UpdateBrandDto
@{
    ViewData["Title"] = "UpdateBrand";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">
                        <input type="hidden" asp-for="BrandId" />
                        <br />
                        <label>Brand Title:</label>
                        <input type="text" class="form-control" asp-for="BrandName" />
                        <br />
                        <label>Brand Image:</label>
                        <input type="text" class="form-control" asp-for="BrandImageUrl" />
                        <button class="btn btn-primary">Update Brand</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>