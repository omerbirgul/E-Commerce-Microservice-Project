@model List<ResultProductDto>
<section class="featured spad" style="background-color:#F0F1F2">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Featured Product</h2>
                </div>
                <div class="featured__controls">
                    <ul>
                        <li class="active" data-filter="*">All</li>
                        <li data-filter=".jeans">Jeans</li>
                        <li data-filter=".fresh-meat">Fresh Meat</li>
                        <li data-filter=".vegetables">Vegetables</li>
                        <li data-filter=".fastfood">Fastfood</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row featured__filter">
            @foreach(var item in Model)
            {
                decimal newPrice = @item.ProductPrice - ((@item.ProductPrice * 10) / 100);
                <div class="col-lg-3 col-md-4 col-sm-6 mix jeans fresh-meat">
                    <div class="featured__item" style="background-color:white">
                        <div class="featured__item__pic set-bg" data-setbg="@Url.Content(@item.ProductImageURL)">
                            <ul class="featured__item__pic__hover">
                                <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
                            </ul>
                        </div>
                        <div class="featured__item__text pb-3" >
                            <h6><a href="#">@item.ProductName</a></h6>
                            <h5>@newPrice₺       <del>@item.ProductPrice₺</del></h5>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>