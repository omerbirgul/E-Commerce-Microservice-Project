
@{
    ViewData["Title"] = "ProductDetail";
    Layout = "~/Views/UILayout/_UILayout.cshtml";
}


<section class="product-details spad">
    <div class="container">
        <div class="row">
            @await Component.InvokeAsync("_ProductDetailImageComponentPartial", new {id = ViewBag.x})
            @await Component.InvokeAsync("_ProductDetailFeatureComponentPartial", new {id = ViewBag.x})
            
            
            <div class="col-lg-12">
                <div class="product__details__tab">
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#tabs-1" role="tab"
                               aria-selected="true">Description</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#tabs-2" role="tab"
                               aria-selected="false">Information</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#tabs-3" role="tab"
                               aria-selected="false">Reviews <span>(1)</span></a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        @await Component.InvokeAsync("_ProductDetailInformationComponentPartial", new {id = ViewBag.x})
                        @await Component.InvokeAsync("_ProductDetailReviewComponentPartial", new {id = ViewBag.x})
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

